<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".party.MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/pNameEdit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_weight="3" />

            <ImageButton
                android:id="@+id/findbtn"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20px"
                android:background="@color/white"
                android:src="@drawable/ic_baseline_search_24"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginHorizontal="20px"
            android:orientation="horizontal">

            <Button
                android:id="@+id/all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:padding="0dp"
                android:text="all"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/jongrogu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:padding="0dp"
                android:text="종로구"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/junggu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:padding="0dp"
                android:text="중구"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/yongsangu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:padding="0dp"
                android:text="용산구"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/seongdonggu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:backgroundTint="#8fceff"
                android:padding="0dp"
                android:text="성동구"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/gwangjingu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:padding="0dp"
                android:text="광진구"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/dongdaemungu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:padding="0dp"
                android:text="동대문구"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginHorizontal="20px"
            android:layout_marginTop="10px"
            android:orientation="horizontal">

            <Button
                android:id="@+id/jungranggu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:padding="0dp"
                android:text="중랑구"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/seongbukgu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:padding="0dp"
                android:text="성북구"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/gangbukgu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:padding="0dp"
                android:text="강북구"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/dobonggu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:padding="0dp"
                android:text="도봉구"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/nowongu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:backgroundTint="#8fceff"
                android:padding="0dp"
                android:text="노원구"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/eunpyeonggu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:padding="0dp"
                android:text="은평구"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginHorizontal="20px"
            android:layout_marginTop="10px"
            android:orientation="horizontal">

            <Button
                android:id="@+id/seodaemungu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:padding="0dp"
                android:text="서대문구"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/mapogu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:padding="0dp"
                android:text="마포구"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/yangcheongu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:padding="0dp"
                android:text="양천구"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/gangseogu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:padding="0dp"
                android:text="강서구"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/gurogu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:padding="0dp"
                android:text="구로구"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/geumcheongu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:backgroundTint="#8fceff"
                android:padding="0dp"
                android:text="금천구"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/yeongdeungpogu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:padding="0dp"
                android:text="영등포구"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginHorizontal="20px"
            android:layout_marginTop="10px"
            android:orientation="horizontal">

            <Button
                android:id="@+id/dongjakgu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:padding="0dp"
                android:text="동작구"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/gwanakgu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:padding="0dp"
                android:text="관악구"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/seochogu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:padding="0dp"
                android:text="서초구"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/gangnamgu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:padding="0dp"
                android:text="강남구"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/songpagu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:backgroundTint="#8fceff"
                android:padding="0dp"
                android:text="송파구"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/gangdonggu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:padding="0dp"
                android:text="강동구"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:textStyle="bold" />


        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </androidx.recyclerview.widget.RecyclerView>


    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_baseline_add_24"
        app:backgroundTint="#5688bc"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>