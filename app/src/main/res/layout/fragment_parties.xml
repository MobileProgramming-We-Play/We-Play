<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".party.MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/pNameEdit"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"/>

        <ImageButton
            android:id="@+id/findbtn"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20px"
            android:background="@color/white"
            android:src="@drawable/ic_baseline_search_24"
            tools:ignore="TouchTargetSizeCheck" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:orientation="horizontal"
        android:layout_marginHorizontal="20px">

        <Button
            android:id="@+id/all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12dp"
            android:padding="0dp"
            android:layout_marginHorizontal="2dp"
            android:background="@drawable/button"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="all" />

        <Button
            android:id="@+id/jongrogu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12dp"
            android:padding="0dp"
            android:layout_marginHorizontal="2dp"
            android:background="@drawable/button"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="종로구" />

        <Button
            android:id="@+id/junggu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12dp"
            android:padding="0dp"
            android:background="@drawable/button"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="중구" />

        <Button
            android:id="@+id/yongsangu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12dp"
            android:padding="0dp"
            android:layout_marginHorizontal="2dp"
            android:background="@drawable/button"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="용산구" />

        <Button
            android:id="@+id/seongdonggu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12dp"
            android:padding="0dp"
            android:layout_marginHorizontal="2dp"
            android:backgroundTint="#8fceff"
            android:background="@drawable/button"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="성동구" />

        <Button
            android:id="@+id/gwangjingu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12dp"
            android:padding="0dp"
            android:layout_marginHorizontal="2dp"
            android:background="@drawable/button"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="광진구" />

        <Button
            android:id="@+id/dongdaemungu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12dp"
            android:padding="0dp"
            android:layout_marginHorizontal="2dp"
            android:background="@drawable/button"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="동대문구" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:orientation="horizontal"
        android:layout_marginHorizontal="20px"
        android:layout_marginTop="10px">

        <Button
            android:id="@+id/jungranggu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12dp"
            android:padding="0dp"
            android:layout_marginHorizontal="2dp"
            android:background="@drawable/button"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="중랑구" />

        <Button
            android:id="@+id/seongbukgu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12dp"
            android:padding="0dp"
            android:layout_marginHorizontal="2dp"
            android:background="@drawable/button"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="성북구" />

        <Button
            android:id="@+id/gangbukgu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12dp"
            android:padding="0dp"
            android:background="@drawable/button"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="강북구" />

        <Button
            android:id="@+id/dobonggu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12dp"
            android:padding="0dp"
            android:layout_marginHorizontal="2dp"
            android:background="@drawable/button"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="도봉구" />

        <Button
            android:id="@+id/nowongu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12dp"
            android:padding="0dp"
            android:layout_marginHorizontal="2dp"
            android:backgroundTint="#8fceff"
            android:background="@drawable/button"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="노원구" />

        <Button
            android:id="@+id/eunpyeonggu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12dp"
            android:padding="0dp"
            android:layout_marginHorizontal="2dp"
            android:background="@drawable/button"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="은평구" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:orientation="horizontal"
        android:layout_marginHorizontal="20px"
        android:layout_marginTop="10px">
        <Button
            android:id="@+id/seodaemungu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12dp"
            android:padding="0dp"
            android:layout_marginHorizontal="2dp"
            android:background="@drawable/button"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="서대문구" />

        <Button
            android:id="@+id/mapogu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12dp"
            android:padding="0dp"
            android:layout_marginHorizontal="2dp"
            android:background="@drawable/button"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="마포구" />

        <Button
            android:id="@+id/yangcheongu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12dp"
            android:padding="0dp"
            android:layout_marginHorizontal="2dp"
            android:background="@drawable/button"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="양천구" />

        <Button
            android:id="@+id/gangseogu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12dp"
            android:padding="0dp"
            android:background="@drawable/button"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="강서구" />

        <Button
            android:id="@+id/gurogu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12dp"
            android:padding="0dp"
            android:layout_marginHorizontal="2dp"
            android:background="@drawable/button"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="구로구" />

        <Button
            android:id="@+id/geumcheongu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12dp"
            android:padding="0dp"
            android:layout_marginHorizontal="2dp"
            android:backgroundTint="#8fceff"
            android:background="@drawable/button"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="금천구" />

        <Button
            android:id="@+id/yeongdeungpogu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12dp"
            android:padding="0dp"
            android:layout_marginHorizontal="2dp"
            android:background="@drawable/button"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="영등포구" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:orientation="horizontal"
        android:layout_marginHorizontal="20px"
        android:layout_marginTop="10px">

        <Button
            android:id="@+id/dongjakgu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12dp"
            android:padding="0dp"
            android:layout_marginHorizontal="2dp"
            android:background="@drawable/button"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="동작구" />

        <Button
            android:id="@+id/gwanakgu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12dp"
            android:padding="0dp"
            android:layout_marginHorizontal="2dp"
            android:background="@drawable/button"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="관악구" />

        <Button
            android:id="@+id/seochogu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12dp"
            android:padding="0dp"
            android:background="@drawable/button"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="서초구" />

        <Button
            android:id="@+id/gangnamgu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12dp"
            android:padding="0dp"
            android:layout_marginHorizontal="2dp"
            android:background="@drawable/button"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="강남구" />

        <Button
            android:id="@+id/songpagu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12dp"
            android:padding="0dp"
            android:layout_marginHorizontal="2dp"
            android:backgroundTint="#8fceff"
            android:background="@drawable/button"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="송파구" />

        <Button
            android:id="@+id/gangdonggu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12dp"
            android:padding="0dp"
            android:layout_marginHorizontal="2dp"
            android:background="@drawable/button"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="강동구" />



    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="462dp">

    </androidx.recyclerview.widget.RecyclerView>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/ic_baseline_add_24"
        android:id="@+id/fabMain"
        app:fabSize="normal" />

</LinearLayout>